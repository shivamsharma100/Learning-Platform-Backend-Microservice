<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <!-- Changeset for lessons table -->
    <changeSet id="2-create-lessons-table" author="yourname">
        <createTable tableName="lessons">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content_url" type="VARCHAR(1000)"/>
            <column name="order_no" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign key constraint to courses -->
        <addForeignKeyConstraint
                baseTableName="lessons"
                baseColumnNames="course_id"
                referencedTableName="courses"
                referencedColumnNames="id"
                constraintName="fk_lessons_course"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>