{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["enrollments"],
  "additionalProperties": false,

  "properties": {
    "enrollments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["learnerId", "enrolledAt", "status"],
        "additionalProperties": false,

        "properties": {
          "learnerId": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": ["available", "not-available"]
          },
          "enrolledAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
